{
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "bun --env-file=.env.local --watch src/main.ts --minify",
    "build": "bun build src/main.ts --outdir ./dist --minify --splitting --target node ",
    "prestart": "bun run build",
    "start": "bun ./dist/main.js",
    "format": "bunx biome format --write .",
    "lint": "bunx biome lint --write .",
    "check": "bunx biome check --write .",
    "husky": "bun .husky/install.mjs",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepare": "husky",
    "commit": "cz",
    "css:watch": "tailwindcss -i ./public/styles/input.css -o ./public/styles/style.css --watch",
    "css:build": "tailwindcss -i ./public/styles/input.css -o ./public/styles/style.css"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.6",
    "concurrently": "^9.0.1",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-ejs-layouts": "^2.5.1",
    "http-status": "^1.7.4",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "sequelize": "^6.37.3",
    "serve-favicon": "^2.5.0",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/express": "^5.0.0",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.2",
    "@types/serve-favicon": "^2.5.7",
    "autoprefixer": "^10.4.20",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.6",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
