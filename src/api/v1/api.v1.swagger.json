  "components": {
    "schemas": {
      "successResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "number",
            "example": 200
          },
          "code": {
            "type": "string",
            "example": "OK"
          },
          "message": {
            "type": "string",
            "example": "server is up and running ..."
          }
        }
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "check if the server is ruining",
        "tags": ["Server"],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/successResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
